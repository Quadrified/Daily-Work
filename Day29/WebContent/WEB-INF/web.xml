<web-app>
	<!-- Servlet Registration -->
	<servlet>
		<servlet-name>Hello Servlet</servlet-name>
		<servlet-class>com.cts.activity.controller.HelloServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login Servlet</servlet-name>
		<servlet-class>com.cts.activity.controller.LoginServlet</servlet-class>
	</servlet>

	<!-- Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>Hello Servlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login Servlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
</web-app>